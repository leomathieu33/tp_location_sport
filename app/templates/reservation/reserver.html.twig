{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
    <h1>Mes réservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Terrain</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.terrain.ville }} - {{ reservation.terrain.referenceTerrain }}</td>
                <td>{{ reservation.dateReservationDebut|date('d/m/Y H:i') }}</td>
                <td>{{ reservation.dateReservationFin|date('d/m/Y H:i') }}</td>
                <td>
                    <form method="post" action="{{ path('app_reservation_cancel', {'id': reservation.id}) }}" onsubmit="return confirm('Voulez-vous vraiment annuler cette réservation ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('cancel-reservation' ~ reservation.id) }}">
                        <button class="btn btn-danger btn-sm" type="submit">Annuler</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune réservation trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}