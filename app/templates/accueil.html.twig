{% extends 'base.html.twig' %}

{% block title %}Accueil - Réserver votre terrain{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{% block body %}
<div class="page-wrapper">

  <header>
    <h1>
      <img src="{{ asset('images/logo.png') }}" alt="LOCASPORT, plateforme de réservation de terrains sportifs" width="150" />
    </h1>

    <p>Réservez Votre Terrain en Ligne</p>

    <form id="searchForm" aria-label="Formulaire de recherche de terrains sportifs">
      <label for="sport" class="sr-only">Sport (ex: Tennis, Padel...)</label>
      <input type="text" id="sport" name="sport" placeholder="Sport (ex: Tennis, Padel...)" />

      <label for="ville" class="sr-only">Ville ou code postal</label>
      <input type="text" id="ville" name="ville" placeholder="Ville ou code postal" />

      <label for="date" class="sr-only">Date de réservation</label>
      <input type="date" id="date" name="date" />

      <button type="submit">Rechercher</button> 
    </form>
  </header>

  <section class="sports-list" aria-label="Liste des sports disponibles">
    <h2>Choisissez un sport</h2>
    <div class="sports" role="list">
      <button role="listitem">Padel</button>
      <button role="listitem">Soccer</button>
      <button role="listitem">Tennis</button>
    </div>
  </section>

  <section class="centres-proches" aria-live="polite" aria-atomic="true">
    <h2>Terrains disponibles</h2>
    <div id="results"></div>
  </section>

</div> 
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/accueil.js') }}"></script>
{% endblock %}